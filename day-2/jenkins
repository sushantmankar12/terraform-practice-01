pipeline {
    agent any

    environment {
        TF_DIR = 'day-2'   // üëà Your folder inside the repo
    }

    parameters {
        choice(name: 'action', choices: ['apply', 'destroy'], description: 'Choose Terraform action')
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sushantmankar12/terraform-practice-01.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${env.TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${env.TF_DIR}") {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply/Destroy') {
            steps {
                echo "‚öôÔ∏è Running: terraform ${params.action} ..."
                dir("${env.TF_DIR}") {
                    sh "terraform ${params.action} -auto-approve"
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Terraform ${params.action} completed successfully."
        }
    }
}
